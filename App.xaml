<Application x:Class="AxionControl.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="NeonButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#00FFD5"/>
            <Setter Property="Background" Value="#14142B"/>
            <Setter Property="BorderBrush" Value="#00FFD5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00FFD5"
                                      BlurRadius="20"
                                      ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
