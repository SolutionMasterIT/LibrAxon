<Window x:Class="AxionControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibrAxon"
        Width="900" Height="520"
		Icon="Assets/myicon.ico">

    <DockPanel LastChildFill="True">

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Számítógép adatai" Click="ShowInfo"/>
            <MenuItem Header="Programok telepítése" Click="ShowApps"/>
            <MenuItem Header="Illesztő eszközök" Click="ShowDrivers"/>
            <MenuItem Header="Névjegy" Click="ShowAbout"/>
        </Menu>
		
		<StatusBar DockPanel.Dock="Bottom" Background="#1a0a0a" BorderBrush="#333" BorderThickness="0,1,0,0">
			<StatusBarItem HorizontalContentAlignment="Stretch">
				<Grid Width="880">
					<TextBlock x:Name="StatusTextBlock" Text="Kész" Foreground="#888" Margin="5,0"/>
					<ProgressBar x:Name="DownloadProgressBar" Height="10" Width="200" 
								 HorizontalAlignment="Right" VerticalAlignment="Center"
								 Visibility="Collapsed" IsIndeterminate="False"
								 Foreground="#9B59B6" Background="#222" BorderThickness="0"/>
				</Grid>
			</StatusBarItem>
		</StatusBar>

        <!-- IDE VÁLTUNK TARTALMAT -->
        <ContentControl x:Name="MainContent"
                    Background="#111"/>
    </DockPanel>
</Window>
