<UserControl x:Class="AxionControl.Views.DriversView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <UserControl.Resources>
        <!-- Gradient háttér brush -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a0a0a" Offset="0"/>
            <GradientStop Color="#2d1515" Offset="0.5"/>
            <GradientStop Color="#1a0a0a" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Lila gomb stílus -->
        <Style x:Key="PurpleButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#6B2C91" Offset="0"/>
                        <GradientStop Color="#4A1F63" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#9B59B6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="40"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="PART_Border"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="8">
							<Border.Effect>
								<DropShadowEffect Color="#9B59B6" BlurRadius="15" 
												ShadowDepth="0" Opacity="0.6"/>
							</Border.Effect>
							<ContentPresenter HorizontalAlignment="Center" 
											VerticalAlignment="Center"
											Margin="{TemplateBinding Padding}"/>
						</Border>
						<ControlTemplate.Triggers>
							<!-- Hover állapot -->
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background">
									<Setter.Value>
										<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
											<GradientStop Color="#8B3CB1" Offset="0"/>
											<GradientStop Color="#6A2F83" Offset="1"/>
										</LinearGradientBrush>
									</Setter.Value>
								</Setter>
							</Trigger>
							<!-- Pressed állapot -->
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background">
									<Setter.Value>
										<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
											<GradientStop Color="#4A1F63" Offset="0"/>
											<GradientStop Color="#6B2C91" Offset="1"/>
										</LinearGradientBrush>
									</Setter.Value>
								</Setter>
							</Trigger>
							<!-- Disabled állapot - SZÜRKE HÁTTÉR ÉS HALVÁNYÍTOTT SZÖVEG -->
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Background">
									<Setter.Value>
										<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
											<GradientStop Color="#3A3A3A" Offset="0"/>
											<GradientStop Color="#252525" Offset="1"/>
										</LinearGradientBrush>
									</Setter.Value>
								</Setter>
								<Setter Property="BorderBrush" Value="#4A4A4A"/>
								<Setter Property="Foreground" Value="#666666"/>
								<Setter Property="Cursor" Value="No"/>
								<Setter TargetName="PART_Border" Property="Effect">
									<Setter.Value>
										<DropShadowEffect Color="#333333" BlurRadius="8" 
														ShadowDepth="0" Opacity="0.3"/>
									</Setter.Value>
								</Setter>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
        </Style>
        
        <!-- Piros gomb stílus -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource PurpleButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#8B0000" Offset="0"/>
                        <GradientStop Color="#5C0000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#B22222"/>
        </Style>
        
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BackgroundGradient}">
        <Viewbox Stretch="Uniform">
            <Grid Width="1000" Height="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Fejléc logóval -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,20">
                    <Grid Width="180" Height="180">
                        <!-- Logo kör -->
                        <Ellipse Width="180" Height="180" Stroke="#9B59B6" StrokeThickness="4">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#2d1515" Offset="0"/>
                                    <GradientStop Color="#1a0a0a" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#9B59B6" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- Logo szöveg -->
						<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
							<TextBlock Text="SM" FontSize="60" FontWeight="Bold" 
									 Foreground="#9B59B6" HorizontalAlignment="Center"/>
							<TextBlock Text="LibrAxon" FontSize="24" Foreground="#888" 
									 HorizontalAlignment="Center" Margin="0,-5,0,0"/>
						</StackPanel>
                    </Grid>
                    
                    <TextBlock Text="OPEN FOX PROJEKT" FontSize="36" FontWeight="Bold" 
                             Foreground="#4A9B9B" HorizontalAlignment="Center" 
                             Margin="0,15,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#4A9B9B" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
                
                <!-- Gombok rész -->
                <Grid Grid.Row="1" Margin="40,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Bal oldali gombok -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
						<Button x:Name="btnDirectX" Content="DirectX Telepítése" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
						<Button x:Name="btnRealtek" Content="Realtek HD Audio Driver" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
						<Button x:Name="btnDolby1" Content="Dolby Digital - 1 Telepít" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
						<Button x:Name="btnDefenderKiller" Content="Win Defender Killer" Style="{StaticResource RedButtonStyle}" Click="DriverButton_Click"/>
						<Button x:Name="btnDolbyAC4" Content="Dolby AC4 - 2 Telepít" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
					</StackPanel>
                    
                    <!-- Jobb oldali gombok -->
					<StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
						<Button x:Name="btnWallpaper" Content="LibrAxon háttérkép beállítása" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
						<Button x:Name="btnRemoteDesktop" Content="Távoli asztal manager" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
						<Button x:Name="btnWinbox" Content="Winbox Új (beta)" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
					</StackPanel>
                </Grid>
                
                <!-- Alsó gombok -->
				<UniformGrid Grid.Row="2" Rows="1" Columns="3" Margin="40,10,40,30">
					<Button x:Name="btnMedveIro" Content="Medve Író - AdwCleaner" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
					<Button x:Name="btnDDU" Content="DDU driver törlő" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
					<Button x:Name="btnTestMode" Content="Test Mode" Style="{StaticResource PurpleButtonStyle}" Click="DriverButton_Click"/>
				</UniformGrid>
                
                <!-- Dekoratív axolotl -->
                <Canvas Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="80" Height="80" Margin="0,40,60,0">
                    <!-- Axolotl test -->
                    <Ellipse Width="60" Height="50" Fill="#C97B7B" Canvas.Left="10" Canvas.Top="20" Opacity="0.8"/>
                    <!-- Bal füllő -->
                    <Ellipse Width="15" Height="25" Fill="#B85C5C" Canvas.Left="0" Canvas.Top="10" Opacity="0.8"/>
                    <!-- Jobb füllő -->
                    <Ellipse Width="15" Height="25" Fill="#B85C5C" Canvas.Left="65" Canvas.Top="10" Opacity="0.8"/>
                    <!-- Bal szem -->
                    <Ellipse Width="8" Height="8" Fill="#4A1F1F" Canvas.Left="22" Canvas.Top="35"/>
                    <!-- Jobb szem -->
                    <Ellipse Width="8" Height="8" Fill="#4A1F1F" Canvas.Left="45" Canvas.Top="35"/>
                    <!-- Mosoly -->
                    <Path Data="M 25,48 Q 37,52 50,48" Stroke="#4A1F1F" StrokeThickness="2" 
                          StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                </Canvas>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>