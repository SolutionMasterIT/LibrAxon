<UserControl x:Class="AxionControl.Views.InfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Resources>
        <!-- Gradient háttér -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a0a0a" Offset="0"/>
            <GradientStop Color="#2d1515" Offset="0.5"/>
            <GradientStop Color="#1a0a0a" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BackgroundGradient}">
        <Viewbox Stretch="Uniform">
            <Grid Width="1000" Height="700">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Felső CPU és Board info -->
                <StackPanel Grid.Row="0" Margin="30,20,30,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="CPU: " FontSize="18" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="CpuInfoTextBlock" Text="Betöltés..." FontSize="18" Foreground="#5DADE2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Board: " FontSize="18" Foreground="#CCCCCC"/>
                        <TextBlock x:Name="BoardInfoTextBlock" Text="Betöltés..." FontSize="18" Foreground="#D4AC6E"/>
                    </StackPanel>
                    <!-- Debug info -->
                    <TextBlock x:Name="DebugInfoTextBlock" Text="" FontSize="12" Foreground="#FFD700" 
                             Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Központi terület logo és mérőórák -->
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- CPU mérő -->
                    <Grid Grid.Column="0" Width="180" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Külső kék kör (border) -->
                        <Ellipse Width="180" Height="180" Stroke="#3498DB" StrokeThickness="4">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#3498DB" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- Kitölthető kör (használat %) -->
                        <Path x:Name="CpuFillPath" Fill="#3498DB" Opacity="0.3"/>
                        
                        <!-- CPU chip ikon -->
                        <Border Width="100" Height="100" Background="#2C3E50" BorderBrush="#95A5A6" 
                                BorderThickness="3" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                            </Border.Effect>
                            <Grid>
                                <!-- Chip részletek -->
                                <Border Background="#34495E" Margin="10" CornerRadius="2"/>
                                <TextBlock x:Name="CpuPercentageTextBlock" Text="0%" FontSize="32" FontWeight="Bold" 
                                         Foreground="#E74C3C" HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- Középső logo -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40,0">
                        <Grid Width="200" Height="200">
                            <Ellipse Width="200" Height="200" Stroke="#9B59B6" StrokeThickness="4">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#2d1515" Offset="0"/>
                                        <GradientStop Color="#1a0a0a" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#9B59B6" BlurRadius="25" ShadowDepth="0" Opacity="0.8"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            
							<!-- Logo szöveg -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="SM" FontSize="65" FontWeight="Bold" 
                                         Foreground="#9B59B6" HorizontalAlignment="Center"/>
                                <TextBlock Text="LibrAxon" FontSize="26" Foreground="#888" 
                                         HorizontalAlignment="Center" Margin="0,-8,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="OPEN FOX PROJEKT" FontSize="32" FontWeight="Bold" 
                                 Foreground="#4A9B9B" HorizontalAlignment="Center" 
                                 Margin="0,15,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#4A9B9B" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- RAM mérő -->
                    <Grid Grid.Column="2" Width="180" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Külső narancs/lila kör (border) -->
                        <Ellipse Width="180" Height="180" Stroke="#E67E22" StrokeThickness="4">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#E67E22" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- Kitölthető kör (használat %) -->
                        <Path x:Name="RamFillPath" Fill="#E67E22" Opacity="0.3"/>
                        
                        <!-- RAM chip ikon -->
                        <Border Width="100" Height="100" Background="#2C3E50" BorderBrush="#95A5A6" 
                                BorderThickness="3" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                            </Border.Effect>
                            <Grid>
                                <!-- RAM vonalak -->
                                <StackPanel Orientation="Vertical" Margin="15,10">
                                    <Rectangle Height="2" Fill="#95A5A6" Margin="0,3"/>
                                    <Rectangle Height="2" Fill="#95A5A6" Margin="0,3"/>
                                    <Rectangle Height="2" Fill="#95A5A6" Margin="0,3"/>
                                    <Rectangle Height="2" Fill="#95A5A6" Margin="0,3"/>
                                </StackPanel>
                                <TextBlock Text="RAM" FontSize="14" FontWeight="Bold" 
                                         Foreground="White" HorizontalAlignment="Center" 
                                         VerticalAlignment="Top" Margin="0,8,0,0"/>
                                <TextBlock x:Name="RamPercentageTextBlock" Text="0%" FontSize="28" FontWeight="Bold" 
                                         Foreground="#E74C3C" HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" Margin="0,12,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
                
                <!-- Alsó info terület -->
                <Grid Grid.Row="2" Margin="30,0,30,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Bal oldali tank -->
                    <Canvas Grid.Column="0" Width="120" Height="80" VerticalAlignment="Bottom">
                        <!-- Tank rajz -->
                        <Path Fill="#5D7E6B" Opacity="0.6"
                              Data="M 20,40 L 80,40 L 85,50 L 85,60 L 15,60 L 15,50 Z"/>
                        <Path Fill="#4A6B58" Opacity="0.6"
                              Data="M 30,30 L 70,30 L 75,40 L 25,40 Z"/>
                        <Rectangle Canvas.Left="45" Canvas.Top="20" Width="10" Height="15" Fill="#3A5B48" Opacity="0.6"/>
                        <Ellipse Canvas.Left="20" Canvas.Top="55" Width="15" Height="15" Fill="#2C4A3A" Opacity="0.6"/>
                        <Ellipse Canvas.Left="40" Canvas.Top="55" Width="15" Height="15" Fill="#2C4A3A" Opacity="0.6"/>
                        <Ellipse Canvas.Left="60" Canvas.Top="55" Width="15" Height="15" Fill="#2C4A3A" Opacity="0.6"/>
                    </Canvas>
                    
                    <!-- Középső driver info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="20,0">
                        <Border Background="#1a1a1a" BorderBrush="#FFD700" BorderThickness="2" 
                                Padding="15,10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock x:Name="GpuInfo1TextBlock" Text="Betöltés..." 
                                         Foreground="#FFD700" FontSize="14"/>
                                <TextBlock x:Name="GpuInfo2TextBlock" Text="" 
                                         Foreground="#FFD700" FontSize="14" Margin="0,2,0,0"/>
                                <TextBlock x:Name="GpuInfo3TextBlock" Text="" 
                                         Foreground="#FFD700" FontSize="14" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock x:Name="WindowsVersionTextBlock" Text="Betöltés..." 
                                 Foreground="White" FontSize="16" FontWeight="SemiBold"
                                 HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                    
                    <!-- Jobb oldali axolotl -->
                    <Canvas Grid.Column="2" Width="100" Height="80" VerticalAlignment="Bottom">
                        <Ellipse Width="70" Height="55" Fill="#C97B7B" Canvas.Left="15" Canvas.Top="20" Opacity="0.8"/>
                        <Ellipse Width="18" Height="28" Fill="#B85C5C" Canvas.Left="5" Canvas.Top="10" Opacity="0.8"/>
                        <Ellipse Width="18" Height="28" Fill="#B85C5C" Canvas.Left="77" Canvas.Top="10" Opacity="0.8"/>
                        <Ellipse Width="10" Height="10" Fill="#4A1F1F" Canvas.Left="30" Canvas.Top="38"/>
                        <Ellipse Width="10" Height="10" Fill="#4A1F1F" Canvas.Left="55" Canvas.Top="38"/>
                        <Path Data="M 32,52 Q 47,56 62,52" Stroke="#4A1F1F" StrokeThickness="2" 
                              StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                    </Canvas>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>